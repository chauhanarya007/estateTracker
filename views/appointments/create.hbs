<h1>Book a New Appointment</h1>
<form method="post" class="form-ele">
        <fieldset>
            <label for="name" class="col-2">Full Name: </label>
            <input name="name" id="name" required />
        </fieldset>
        <fieldset>
            <label for="property" class="col-2">Property: </label>
            <select name="property" id="property" required>
                {{#each properties}}
                <option>{{this.name}}</option>
                {{/each}}
            </select>
        </fieldset>
        <fieldset>
            <label for="date" class="col-2">Date: </label>
            <input type="date" name="date" id="date" required>
        </fieldset>
        <fieldset>
            <label for="email" class="col-2">Email: </label>
            <input type="email" name="email" id="email" required>
        </fieldset>
        <fieldset>
            <label for="phone" class="col-2">Phone Number: </label>
            <input type="tel" name="phone" id="phone" required>
        </fieldset>
        <fieldset>
            <label for="description" class="col-2">Additional Notes: </label>
            <textarea name="description" id="description" ></textarea>         
        </fieldset>
        <button class="btn btn-secondary offset-2">Save</button>
</form>